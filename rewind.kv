<StartScreen>:
    size_hint:0.6,0.7
    pos_hint: {'center_x': 0.5,'center_y': 0.5}
    
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "TAM EKRAN YAPMAYI UNUTMA"
        Button:
            text: "HAZIR OLDUĞUNDA BAS"
            id: basla
            size_hint: 0.2, 0.2
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_press:
                root.manager.current = 'intro'
                
<IntroScreen>:
    orientation: "vertical"
    spacing: 50
    space_x: self.size[0]/3
    canvas.before:
        Color:
            rgba: (0, 0, 0, 0)
        Rectangle:
            size: self.size
            pos: self.pos
  
    FloatLayout:
        orientation:'vertical'
        padding:100
        spacing:30
        Button:
            size_hint:0.2, 0.1
        
            text:'BURAYA BAS'
            bold:True
            pos_hint: {"center_x": 0.5, "center_y": 0.9}
            background_color: (1, .36, .4, .55)
            on_release: root.play_sound()
    Label:
        text: ""
        pos_hint: {"center_x": 0.5, "center_y": 0.1}
        id:cpt_1
        size_hint: (None, None)
        
        font_size: 26
        font_name: "Arial"
        color: (1, 1, 1, 1)
        text_size: (None, None)
